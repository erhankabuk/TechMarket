@model BasketViewModel

<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-muted">Your cart</span>
    <span class="badge badge-secondary badge-pill">@Model.Items.Count</span>
</h4>
<ul class="list-group mb-3">
    @foreach (var item in Model.Items)
    {
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@item.ProductName</h6>
                <small class="text-muted">Unit Price: @item.PriceUsd x@(item.Quantity)</small>
            </div>
            <span class="text-muted">@item.TotalPriceUsd</span>
        </li>
    }

    <li class="list-group-item d-flex justify-content-between">
        <span>Total (USD)</span>
        <strong>@Model.TotalPriceUsd</strong>
    </li>
</ul>
